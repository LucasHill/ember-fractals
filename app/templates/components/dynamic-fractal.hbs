{{#if shouldRecurse}}
  <g transform="translate({{x}} {{y}}) {{rotate}}">
    <rect width="{{w}}" height="{{w}}"
          x="0" y="0"
          style="fill:{{fill}}"/>

    <DynamicFractal @w={{nextLeft}} @x={{0}} @y={{nextYLeft}} @lvl={{plusLvl}} @maxlvl={{maxlvl}} @heightFactor={{heightFactor}} @lean={{lean}} @left={{true}} />

    <DynamicFractal @w={{nextRight}} @x={{nextXRight}} @y={{nextYRight}} @lvl={{plusLvl}} @maxlvl={{maxlvl}} @heightFactor={{heightFactor}} @lean={{lean}} @right={{true}} />
  </g>
{{/if}}
