<div class="App">
  <div class="App-header">
      <img src="assets/logo.svg" class="App-logo" alt="spinning tomster" />
      <h2>This is a dancing Pythagoras tree</h2>
  </div>
  <p class="App-intro">
      <svg width={{this.svgWidth}} height={{this.svgHeight}} id="rootSVG" style='border: "1px solid lightgray"'>

          <DynamicFractal @w={{this.baseW}} @h={{this.baseW}} @heightFactor={{this.heightFactor}} @lean={{this.lean}} @x={{this.xPos}} @y={{this.yPos}} @lvl={{0}} @maxlvl={{this.currentMax}} />

      </svg>
  </p>
</div>